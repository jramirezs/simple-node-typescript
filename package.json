{
  "name": "simple-node-typescript",
  "version": "1.0.0",
  "description": "Simple Node + TS starter used mostly as playground",
  "engines": {
    "node": ">=14.16.0"
  },
  "main": "./dist/main.js",
  "scripts": {
    "start": "npm run build && node -r dotenv/config dist/main.js",
    "dev": "nodemon src/main.ts",
    "build": "tsc",
    "lint": "eslint --ext .js,.ts ./src"
  },
  "author": "Jorge Ram√≠rez Serrato <jramirezserrato@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "nodemonConfig": {
    "verbose": false,
    "ignore": [
      "dist",
      "node_modules",
      ".vscode"
    ],
    "execMap": {
      "ts": "node -r ts-node/register -r dotenv/config"
    }
  }
}
