{
  "name": "simple-node-typescript",
  "version": "1.0.0",
  "description": "Simple Node + TS starter used mostly as playground",
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/main.js",
  "scripts": {
    "start": "npm run build && node -r dotenv/config dist/main.js",
    "dev": "nodemon src/main.ts",
    "build": "tsc",
    "lint": "eslint --ext .js,.ts ./src"
  },
  "author": "Jorge Ram√≠rez Serrato <jramirezserrato@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "nodemonConfig": {
    "verbose": false,
    "ignore": [
      "dist",
      "node_modules",
      ".vscode"
    ],
    "execMap": {
      "ts": "node -r ts-node/register -r dotenv/config"
    }
  }
}
